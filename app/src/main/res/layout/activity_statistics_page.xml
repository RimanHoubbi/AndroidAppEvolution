
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".view.activities.MainActivity">

    //buttons to customize time period

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/button_7_days" />

        <Button
            android:id="@+id/button_30_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/button_30_days" />

        <Button
            android:id="@+id/button_90_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/button_90_days" />


    </LinearLayout>

    //Activity Chart

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="394dp"
        android:layout_height="38dp" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/bar_chart_activity"
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1">

    </com.github.mikephil.charting.charts.CombinedChart>
</LinearLayout>